generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(uuid())
  username          String?           @unique
  email             String            @unique
  PhoneNumber       String?           @unique
  passwordHash      String?
  firstName         String?
  lastName          String?
  googleId          String?           @unique
  profilePictureUrl String?
  location          String?
  Gender            String?
  Skills            String[]
  Semester          Int?              @default(1)
  Interests         String[]
  workorProject     String?
  About             String?
  college           String?
  degree            String?
  startYear         Int?
  endYear           Int?
  verified          Boolean           @default(false)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  isOnline          Boolean           @default(false)
  lastSeen          DateTime?
  status            String            @default("available")
  class10Board      String?
  class12Board      String?
  headline          String[]
  //anonymousChats1   AnonymousChat[]   @relation("AnonymousChatUser1")
  //anonymousChats2   AnonymousChat[]   @relation("AnonymousChatUser2")
  blogs             Blogs[]
  CloudinaryMedia   CloudinaryMedia[]
  Comments          Comments[]
  connections1      Connection[]      @relation("UserConnections1")
  connections2      Connection[]      @relation("UserConnections2")
  GroupMember       GroupMember[]
  groupMessages     GroupMessage[]    @relation("GroupMessageSender")
  Likes             Likes[]
  receiverMessages  Message[]         @relation("receiverMessages")
  senderMessages    Message[]         @relation("senderMessages")
  otps              Otp[]
  posts             Post[]
  Share             Share[]
  UserActivity      UserActivity[]
  experiences       Experience[]
  humanLibReceived  HumanLib[]        @relation("HumanLibReceiver")
  humanLibSent      HumanLib[]        @relation("HumanLibSender")
  File              File[]
  stories           Story[]
  storyViews        StoryView[]
  notifications     Notification[]    @relation("UserNotifications")
  actorNotifications Notification[]   @relation("ActorNotifications")
}

model HumanLib {
  id         String   @id @default(uuid())
  userId     String
  nickname   String
  content    String
  isOnline   Boolean  @default(false)
  createdAt  DateTime @default(now())
  senderId   String
  receiverId String
  receiver   User     @relation("HumanLibReceiver", fields: [receiverId], references: [id])
  sender     User     @relation("HumanLibSender", fields: [senderId], references: [id])
}

model Message {
  id         String   @id @default(uuid())
  content    String
  createdAt  DateTime @default(now())
  senderId   String
  receiverId String
  receiver   User     @relation("receiverMessages", fields: [receiverId], references: [id])
  sender     User     @relation("senderMessages", fields: [senderId], references: [id])

  @@unique([senderId, receiverId, createdAt])
}

